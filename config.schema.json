{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "array",
  "items": [
    {
      "type": "object",
      "properties": {
        "extension": {
          "type": "string",
        },
        "dst": {
          "type": "string",
          "description": "default destination folder for the specified extension"
        },
        "patterns": {
          "type": "array",
          "description": "optional array of regex patterns",
          "items": [
            {
              "type": "object",
              "properties": {
                "regex": {
                  "type": "string"
                },
                "dst": {
                  "type": "string",
                  "description": "destination folder for files matching the specified regex"
                }
              },
              "required": [
                "regex",
                "dst"
              ]
            }
          ]
        }
      },
      "required": [
        "extension",
        "dst"
      ]
    }
  ]
}