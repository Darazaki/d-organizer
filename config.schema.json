{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": [
    {
      "type": "object",
      "properties": {
        "extensions": {
          "type": "array",
          "description": "file extensions to match (do not include the dot)",
          "items": [
            {
              "type": "string"
            }
          ]
        },
        "prefix": {
          "type": "string",
          "description": "optional prefix to match"
        },
        "suffix": {
          "type": "string",
          "description": "optional suffix to match"
        },
        "regex": {
          "type": "string",
          "description": "optional regex to match"
        },
        "dst": {
          "type": "string",
          "description": "folder to which matched files will be moved"
        }
      },
      "required": [
        "extensions",
        "dst"
      ]
    }
  ]
}